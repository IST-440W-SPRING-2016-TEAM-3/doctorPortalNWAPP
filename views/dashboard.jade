
extends loggedinlayout

block content
	.p-t
		.mainBox
			.userNav
				ul.dashNav
					li.active(role='presentation')
						a(data-toggle="tab", href='#userprofile') User Profile
					li(role='presentation')
						a(data-toggle="tab", href='#medications') Medications 
					li(role='presentation')
						a(data-toggle="tab", href='#allergies') Allergies 
					li(role='presentation')
						a(data-toggle="tab", href='#immunizations') Immunizations
					li(role='presentation')
						a(data-toggle="tab", href='#testresults') Test Results
					li(role='presentation')
						a(data-toggle="tab", href='#history') History Summary
			.col-sm-10		
				.userContent.tab-content						
					#userprofile.tab-pane.fade.in.active
						h1 User Profile
						//- p 123123123123
						//- p 123123123

						form
							.col-sm-9.row
								.form-group.col-sm-4
									label(for='myFirstName') First Name:
									input#myFirstName.form-control(type='text', placeholder='First Name')
								.form-group.col-sm-4
									label(for='myFirstName') Last Name:
									input#myLastName.form-control(type='text', placeholder='Last Name')


							.col-sm-9
								//- .col-sm-4
									label(for='myDOB') DOB:
