										.col-sm-3
											input#myDOB.form-control(type='number', placeholder='Year')
										.col-sm-3
											input#myDOB.form-control(type='text', placeholder='Month')
										.col-sm-3
											input#myDOB.form-control(type='number', placeholder='Day')

							.col-sm-9			
								label(for='myEmail') Email:
								input#myEmail.form-control(type='text', placeholder='Enter here')

								label(for='myPhone') Phone:
								input#myPhone.form-control(type='number', placeholder='Enter here')

								label(for='myAddress') Street Address:
								input#myAddress.form-control(type='text', placeholder='Enter here')

								label(for='myAddress') City:
