
extends loggedinlayout

block content
	.mainBox
		.userNav
			ul.dashNav
				li.active(role='presentation')
					a(data-toggle="tab", href='#createuserprofile') Create User
				li(role='presentation')
					a(data-toggle="tab", href='#testresults') Test Results
				li(role='presentation')
					a(data-toggle="tab", href='#medications') Medications 
				li(role='presentation')
					a(data-toggle="tab", href='#allergies') Allergies 
				li(role='presentation')
					a(data-toggle="tab", href='#immunizations') Immunizations
				li(role='presentation')
					a(data-toggle="tab", href='#history') History Summary
		.userContent.tab-content						
			#createuserprofile.tab-pane.fade.in.active
				h1 Create User
				.mySmallBlock
					label.myLabel First Name *
					input.mySmallInput(ng-model="user.firstname")
				.mySmallBlock
					label.myLabel Last Name *
					input.mySmallInput(ng-model="user.lastname")
				.myClear
				.mySmallBlock
					label.myLabel Email *
					input.mySmallInput(type='email', ng-model="user.email")  
				.mySmallBlock
					label.myLabel Phone
					input.mySmallInput(type='number', ng-model="user.phone")
				.myClear
				.mySmallBlock
					label.myLabel Street Address
					input.mySmallInput(ng-model="user.street")
				.mySmallBlock
					label.myLabel City
					input.mySmallInput(ng-model="user.city")
				.myClear
				.myXSmallBlock
					label.myLabel Country
					input.mySmallInput(ng-model="user.country")
				.myXSmallBlock
					label.myLabel State
					input.mySmallInput(ng-model="user.state")
				.myXSmallBlock
					label.myLabel ZIP
					input.mySmallInput(ng-model="user.zip")

				.myClear
				.myXSmallBlock
					label.myLabel Gender
					input.myRadio(type='radio', name='gender', value='male', ng-model="gender")
					| Male
					input.myRadio(type='radio', name='gender', value='male', ng-model="gender")
					| Female
					input.myRadio(type='radio', name='gender', value='male')
					| Other
				.myXSmallBlock
					label.myLabel Height
					input.mySmallInput
				.myXSmallBlock
					label.myLabel Weight
					input.mySmallInput

				.myClear
				.mySmallBlock
					label.myLabel Primary Insurance
					input.mySmallInput
				.mySmallBlock
					label.myLabel Primary Pharmacy
					input.mySmallInput
				.myMediumBlock
					label.myLabel Comment
					input.myFullInput
					form(name='myForm')						


			#testresults.tab-pane.fade
				h1 Test Results
				.testMain
					.testBlock
						h1 Urine Tests
						form(name='urineTests' novalidate)
							label.myLabel pH Level
							input.mySmallInput(
								placeholder="1-14"
								type="text" 
								name="pH" 
								ng-model="urine.pH" 
								ng-required="true")
							span.myWarning(ng-show="urineTests.pH.$invalid && urineTests.pH.$touched") You must put a number between 1-14

							.myClear		
							label.myLabel Glucose
							input.mySmallInput(placeholder="mg/dL" 
								name="Glucose" 
								ng-model="urine.Glucose"
								ng-required="true")
							span.myWarning(ng-show="urineTests.Glucose.$invalid && urineTests.Glucose.$touched") test text test text

							.myClear		
							label.myLabel Ketones
							Input.mySmallInput(placeholder="mg/dL" 
							name="Ketones" 
							ng-model="urine.Ketones"
							ng-required="true")
							span.myWarning(ng-show="urineTests.Ketones.$invalid && urineTests.Ketones.$touched") You must select Yes or No

							.myClear		
							label.myLabel Gravity
							input.mySmallInput(placeholder="1.005 - 1.030" 
							type="number" 
							name="Gravity" 
							ng-model="urine.Gravity" 
							ng-required="true"
							ng-minlength="1.005" 
							ng-maxlength="1.030"
							ng-pattern= ".+")
							span.myWarning(ng-show="urineTests.Gravity.$invalid && urineTests.Gravity.$touched") You must enter a number between 1.005-1.030

							a.mySubmit.btnsub Submit
							//end urinetests

					.testBlock
						h1 Blood Tests
						label.myLabel Cholesterol
						input.mySmallInput(placeholder="mg/dL")
						.myClear		
						label.myLabel Blood Type
						input.mySmallInput(placeholder="A, B, AB, O")								
						.myClear		
						label.myLabel Glucose
						input.mySmallInput(placeholder="Something")									
						.myClear		
						label.myLabel CRP level mg/L
						input.mySmallInput(placeholder="mg/L")
						a.mySubmit Submit									
						//end blood tests

					.testBlock
						h1 Imaging Tests
						label.myLabel Label shit
						input.mySmallInput(placeholder="Something")
						.myClear		
						label.myLabel Label shit
						input.mySmallInput(placeholder="Something")								
						.myClear		
						label.myLabel Label shit
						input.mySmallInput(placeholder="Something")								
						.myClear		
						label.myLabel Label shit
						input.mySmallInput(placeholder="Something")
						a.mySubmit Submit						
						//ennd test Imaging

					.testBlock
						h1 Endoscopy Tests
						.mediumbox
							label.myLabel Blood Pressure
							input.input50(placeholder="Diastolic")
							input.input50_last.pull-left(placeholder="Systolic")
						.myClear		
						label.myLabel PSA Serum
						input.mySmallInput(placeholder="1-4 ng/mL")								
						.myClear		
						label.myLabel Vision 20/20 20/40 etc..
						input.mySmallInput(placeholder="20/20 20/40 etc..")									
						.myClear		
						label.myLabel Label shit
						input.mySmallInput(placeholder="Something")
						a.mySubmit Submit	
						//end test endoscopy

			#medications.tab-pane.fade
				h1 Medications
				.myMain
					.form-group(data-ng-repeat='choice in medicationChoices')
						form.myBlock.medication(name="medications" novalidate)
							label.myLabel Medication Name
							input.input100(
								placeholder="Medication Name"
								type="text" 
								name="Medname" 
								ng-model="med.name" 
								ng-required="true")
							span.myWarning(ng-show="medications.Medname.$invalid && medications.Medname.$touched") You must enter a medication name	
							.myClear

							label.myLabel Dosage (mg,m,etc)
							input.input100(
								placeholder="mg, g, etc.."
								type="text" 
								name="Dosage" 
								ng-model="med.dosage" 
								ng-required="true")
							span.myWarning(ng-show="medications.Dosage.$invalid && medications.Dosage.$touched") You must enter a dosage	
							.myClear

							label.myLabel Frequency (twice a day/ every 2 hours etc.)
							input.input100(
								placeholder="Frequency"
								type="text" 
								name="Frequency" 
								ng-model="med.frequency" 
								ng-required="true")
							span.myWarning(ng-show="medications.Frequency.$invalid && medications.Frequency.$touched") You must enter a frequency
							.myClear
							.mySmallBlock
								label.myLabel Date Start
								input.input50(
									placeholder="mm/dd/yyyy"
									type="text" 
									name="DateStart" 
									ng-model="med.DateStart" 
									ng-required="true")
								span.myWarning(ng-show="medications.DateStart.$invalid && medications.DateStart.$touched") You must enter a start date
							.mySmallBlock									
								label.myLabel_last Date End
								input.input50_last(
									placeholder="mm/dd/yyyy"
									type="text" 
									name="DateEnd" 
									ng-model="med.DateEnd" 
									ng-required="true")
								span.myWarning(ng-show="medications.DateEnd.$invalid && medications.DateEnd.$touched") You must enter an end date
							.myClear
							label.myLabel Description
							input.myFullInput
							a.mySubmit(ng-show='showAddMedicationChoice(choice)', ng-click='addNewMedicationChoice()') Add another Medication
				a.mySubmit.pull-right Submit

			#allergies.tab-pane.fade
				h1 Allergies
				.myMain
					.form-group(data-ng-repeat='choice in allergyChoices')
						.myBlock.allergy
							label.myLabel Allergy Name
							input.input100(ng-model="choice.name")
							.myClear
							.mySmallBlock
								label.control-label.myLabel Date Start
								input(class="datepicker1 input50 form-control",type='text', ng-model="choice.datepicker1")
							.mySmallBlock
								label.control-label.myLabel_last Date End
								input.form-control.input50_last.datepicker2(type='text', ng-model="choice.datepicker2")
							.myClear
							label.myLabel Description
							input.myFullInput(ng-model="choice.description")
							a.mySubmit(ng-show='showAddAllergiesChoice(choice)', ng-click='addNewAllergiesChoice()') Add another Allergy
				a.mySubmit.pull-right Submit
			#immunizations.tab-pane.fade
				h1 Immunizations
				.myMain
					.form-group(data-ng-repeat='choice in immunizationChoices')
						.myBlock.immunization
							label.myLabel Immunization Name
							input.input100
							.myClear
							.mySmallBlock
								label.myLabel Date Recorded
								input.input50
							.mySmallBlock
								label.myLabel_last Date Expires
								input.input50_last
							.myClear
							label.myLabel Description
							input.myFullInput
							a.mySubmit(ng-show='showAddImmunizationChoice(choice)', ng-click='addNewImmunizationChoice()') Add another Immunization
				a.mySubmit.pull-right Submit
			#history.tab-pane.fade
				h1 History
