
extends loggedinlayout

block content
	.p-t
		.mainBox
			.userNav
				ul.dashNav
					li.active(role='presentation')
						a(data-toggle="tab", href='#createuserprofile') Create User
					li(role='presentation')
						a(data-toggle="tab", href='#testresults') Test Results
					li(role='presentation')
						a(data-toggle="tab", href='#medications') Medications 
					li(role='presentation')
						a(data-toggle="tab", href='#allergies') Allergies 
					li(role='presentation')
						a(data-toggle="tab", href='#immunizations') Immunizations
					li(role='presentation')
						a(data-toggle="tab", href='#history') History Summary
			.col-sm-10		
				.userContent.tab-content						
					#createuserprofile.tab-pane.fade.in.active
						h1 Create User
						//- p 123123123123
						//- p 123123123
						.myForm
							.mySmallBlock
								label.myLabel First Name *
								input.mySmallInput 
							.mySmallBlock
								label.myLabel Last Name *
								input.mySmallInput 

							.myClear
							.mySmallBlock
								label.myLabel Email *
								input.mySmallInput(type='email')  
							.mySmallBlock
								label.myLabel Phone
								input.mySmallInput(type='number')

							.myClear
							.mySmallBlock
								label.myLabel Street Address
								input.mySmallInput
							.mySmallBlock
								label.myLabel City
								input.mySmallInput(type='number')

							.myClear
							.myXSmallBlock
								label.myLabel Country
								input.mySmallInput
							.myXSmallBlock
								label.myLabel State
								input.mySmallInput
							.myXSmallBlock
								label.myLabel ZIP
								input.mySmallInput

							.myClear
							.myXSmallBlock
								label.myLabel Gender
								input.myRadio(type='radio', name='gender', value='male')
								| Male
								input.myRadio(type='radio', name='gender', value='male')
								| Female
								input.myRadio(type='radio', name='gender', value='male')
								| Other
							.myXSmallBlock
								label.myLabel Height
								input.mySmallInput
							.myXSmallBlock
								label.myLabel Weight
								input.mySmallInput

							.myClear
							.mySmallBlock
								label.myLabel Primary Insurance
								input.mySmallInput
							.mySmallBlock
								label.myLabel Primary Pharmacy
								input.mySmallInput
							.myMediumBlock
								label.myLabel Comment
								input.myFullInput								



					#testresults.tab-pane.fade
						h1 Test Results
						.testMain
							.testUrine
								h1 Urine Tests
							.testBlood
								h1 Blood Tests
							.testImaging
								h1 Imaging Tests
							.testEndoscopy
								h1 Endoscopy Tests


					#medications.tab-pane.fade
						h1 Medications
					#allergies.tab-pane.fade
						h1 Allergies
					#immunizations.tab-pane.fade
						h1 Immunizations
					#history.tab-pane.fade
						h1 History
