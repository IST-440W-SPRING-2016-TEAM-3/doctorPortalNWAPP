
extends loggedinlayout

block content
	.mainBox
		.userNav
			ul.dashNav
				li.active(role='presentation')
					a(data-toggle="tab", href='#createuserprofile') Create User
				li(role='presentation')
					a(data-toggle="tab", href='#testresults') Test Results
				li(role='presentation')
					a(data-toggle="tab", href='#medications') Medications 
				li(role='presentation')
					a(data-toggle="tab", href='#allergies') Allergies 
				li(role='presentation')
					a(data-toggle="tab", href='#immunizations') Immunizations
				li(role='presentation')
					a(data-toggle="tab", href='#history') History Summary
		.userContent.tab-content						
			#createuserprofile.tab-pane.fade.in.active
				h1 Create User
				.mySmallBlock
					label.myLabel First Name *
					input.mySmallInput(ng-model="user.firstname")
				.mySmallBlock
					label.myLabel Last Name *
					input.mySmallInput(ng-model="user.lastname")
				.myClear
				.mySmallBlock
					label.myLabel Email *
					input.mySmallInput(type='email', ng-model="user.email")  
				.mySmallBlock
					label.myLabel Phone
					input.mySmallInput(type='number', ng-model="user.phone")
				.myClear
				.mySmallBlock
					label.myLabel Street Address
					input.mySmallInput(ng-model="user.street")
				.mySmallBlock
					label.myLabel City
					input.mySmallInput(ng-model="user.city")
				.myClear
				.myXSmallBlock
					label.myLabel Country
					input.mySmallInput(ng-model="user.country")
				.myXSmallBlock
					label.myLabel State
					input.mySmallInput(ng-model="user.state")
				.myXSmallBlock
					label.myLabel ZIP
					input.mySmallInput(ng-model="user.zip")

				.myClear
				.myXSmallBlock
					label.myLabel Gender
					input.myRadio(type='radio', name='gender', value='male', ng-model="gender")
					| Male
					input.myRadio(type='radio', name='gender', value='male', ng-model="gender")
					| Female
					input.myRadio(type='radio', name='gender', value='male')
					| Other
				.myXSmallBlock
					label.myLabel Height
					input.mySmallInput
				.myXSmallBlock
					label.myLabel Weight
					input.mySmallInput

				.myClear
				.mySmallBlock
					label.myLabel Primary Insurance
					input.mySmallInput
				.mySmallBlock
					label.myLabel Primary Pharmacy
					input.mySmallInput
				.myMediumBlock
					label.myLabel Comment
					input.myFullInput								

			#testresults.tab-pane.fade
				h1 Test Results
				.testMain
					.testBlock
						h1 Urine Tests
						label.myLabel pH Level? 1-14
						input.mySmallInput
						.myClear		
						label.myLabel Glucose
						input.mySmallInput
						//figcaption shits is described?								
						.myClear		
						label.myLabel Ketones? y/n
						input.mySmallInput
						//figcaption describes the shits									
						.myClear		
						label.myLabel Gravity? 1.005 - 1.030
						input.mySmallInput
						//figcaption this is a test
						a.mySubmit Submit
						//end urinetests			

					.testBlock
						h1 Blood Tests
						label.myLabel Cholesterol mg/dL
						input.mySmallInput
						.myClear		
						label.myLabel Blood Type (A, B, AB, O)
						input.mySmallInput								
						.myClear		
						label.myLabel Glucose
						input.mySmallInput									
						.myClear		
						label.myLabel CRP level mg/L
						input.mySmallInput
						a.mySubmit Submit									
						//end blood tests

					.testBlock
						h1 Imaging Tests
						label.myLabel Label shit
						input.mySmallInput
						.myClear		
						label.myLabel Label shit
						input.mySmallInput								
						.myClear		
						label.myLabel Label shit
						input.mySmallInput									
						.myClear		
						label.myLabel Label shit
						input.mySmallInput
						a.mySubmit Submit						
						//ennd test Imaging

					.testBlock
							h1 Endoscopy Tests
							.mySmallBlock
								label.myLabel Blood Pressure
								input.input50(placeholder="Diastolic")
							.mySmallBlock
								label.myLabel(content="")
								input.input50_last(placeholder="Systolic")
							.myClear		
							label.myLabel PSA Serum (prostate) 1-4 ng/mL
							input.mySmallInput								
							.myClear		
							label.myLabel Vision 20/20 20/40 etc..
							input.mySmallInput									
							.myClear		
							label.myLabel Label shit
							input.mySmallInput
							//end test endoscopy

			#medications.tab-pane.fade
				h1 Medications
				.myMain
					.form-group(data-ng-repeat='choice in medicationChoices')
						.myBlock.medication
							label.myLabel Medication Name
							input.input100
							.myClear
							label.myLabel Dosage (mg,m,etc)
							input.input100
							.myClear
							label.myLabel Frequency (twice a day/ every 2 hours etc.)
							input.input100
							.myClear
							.mySmallBlock
								label.myLabel Date start
								input.input50
							.mySmallBlock									
								label.myLabel Date End
								input.input50_last
							.myClear
							label.myLabel Description
							input.myFullInput
							a.mySubmit(ng-show='showAddMedicationChoice(choice)', ng-click='addNewMedicationChoice()') Add another choice
				a.mySubmit.pull-right Submit

			#allergies.tab-pane.fade
				h1 Allergies
				.myMain
					.form-group(data-ng-repeat='choice in allergyChoices')
						.myBlock.allergy
							label.myLabel Allergy Name
							input.input100(ng-model="choice.name")
							.myClear
							.mySmallBlock
								label.control-label.myLabel Date Start
								input(class="datepicker1 input50 form-control",type='text', ng-model="choice.datepicker1")
							.mySmallBlock
								label.control-label.myLabel Date End
								input.form-control.input50_last.datepicker2(type='text', ng-model="choice.datepicker2")
							.myClear
							label.myLabel Description
							input.myFullInput(ng-model="choice.description")
							a.mySubmit(ng-show='showAddAllergiesChoice(choice)', ng-click='addNewAllergiesChoice()') Add another choice
				a.mySubmit.pull-right Submit
			#immunizations.tab-pane.fade
				h1 Immunizations
				.myMain
					.form-group(data-ng-repeat='choice in immunizationChoices')
						.myBlock.immunization
							label.myLabel Immunization Name
							input.input100
							.myClear
							.mySmallBlock
								label.myLabel Date Recorded
								input.input50
							.mySmallBlock
								label.myLabel Date Expires
								input.input50_last
							.myClear
							label.myLabel Description
							input.myFullInput
							a.mySubmit(ng-show='showAddImmunizationChoice(choice)', ng-click='addNewImmunizationChoice()') Add another choice
				a.mySubmit.pull-right Submit
			#history.tab-pane.fade
				h1 History
